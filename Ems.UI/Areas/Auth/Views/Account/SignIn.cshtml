    <script src="~/AdminTemplates/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/AdminTemplates/vendor/php-email-form/validate.js"></script>

  <!-- Template Main JS File -->
    <script src="~/AdminTemplates//js/main.js"></script>
